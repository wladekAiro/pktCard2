<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/regLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="386dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="fill_parent"
                    android:text="LINK CARD"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:height="@dimen/abc_text_size_display_1_material"
                    android:textColor="#b61717"
                    android:shadowColor="#191616"
                    android:minHeight="@dimen/abc_action_bar_stacked_max_height"
                    android:minWidth="@dimen/abc_action_bar_stacked_tab_max_width"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    style="?android:attr/buttonBarPositiveButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:id="@+id/btnRegBack"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtRegNo"
                android:text="Student Number"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="2" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_below="@+id/regLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="69dp"
                android:theme="@style/AlertDialog.AppCompat"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.74" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>